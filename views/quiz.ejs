<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz</title>
    <style>
        body {
            background-color: #f0f0f0;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            width: 80%;
            max-width: 600px;
        }

        h1 {
            color: #333;
            text-align: center;
        }

        h3 {
            color: #555;
        }

        form {
            margin-top: 20px;
        }

        label {
            margin-left: 8px;
            color: #333;
        }

        input[type="radio"] {
            margin-right: 5px;
        }

        button {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 20px;
        }

        button:hover {
            background-color: #218838;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Quiz</h1>
        <form action="/submit-quiz" method="post">
            <% questions.forEach((question, index) => { %>
                <h3><%= index + 1 %>. <%= question.question_text %></h3>
                <input type="radio" id="optionA_<%= index %>" name="answer_<%= index %>" value="A">
                <label for="optionA_<%= index %>"><%= question.option_a %></label><br>
                <input type="radio" id="optionB_<%= index %>" name="answer_<%= index %>" value="B">
                <label for="optionB_<%= index %>"><%= question.option_b %></label><br>
                <input type="radio" id="optionC_<%= index %>" name="answer_<%= index %>" value="C">
                <label for="optionC_<%= index %>"><%= question.option_c %></label><br>
                <input type="radio" id="optionD_<%= index %>" name="answer_<%= index %>" value="D">
                <label for="optionD_<%= index %>"><%= question.option_d %></label><br><br>
            <% }); %>
            <button type="submit">Submit Quiz</button>
        </form>
    </div>
    
</body>
</html>
